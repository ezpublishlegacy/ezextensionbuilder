{
    "name": "gggeek/ezextensionbuilder",
    "description": "Provides tools to build (package) extensions for eZ Publish (4.x or Legacy Stack extensions only)",
    "license": "GNU General Public License v2.0",
    "homepage": "http://projects.ez.no/ezextensionbuilder",
    "require": {
        "php": ">=5.3",

        "indeyets/pake": ">=1.7.4",
        "phploc/phploc": "2.*",
        "phpmd/phpmd": "1.*",
        "phpunit/phpunit": "3.7.*",
        "sebastian/phpcpd": "1.*",
        "sebastian/phpdcd": "1.0.*@dev",
        "squizlabs/php_codesniffer": "1.*",
        "zetacomponents/document": "@dev",
        "zetacomponents/archive": "@dev",

        "ezsystems/ezcs": "@dev"
    },
    "autoload": {
        "classmap": [ "classes" ]
    },
    "bin": [
        "ezextbuilder"
    ]
}